# Firebase Configuration
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control

VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Mapbox Configuration
# Sign up at https://account.mapbox.com/ to get your access token
VITE_MAPBOX_ACCESS_TOKEN=your_mapbox_token_here
VITE_MAPBOX_STYLE=mapbox://styles/mapbox/satellite-streets-v12

# Local Development (Firebase Emulator)
# Set to "true" to connect to local Firebase Emulators instead of production
# Use: npm run dev:emulator (automatically sets this)
VITE_USE_EMULATORS=false
