rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is owner or manager
    function isOwnerOrManager() {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['owner', 'manager'];
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    // - All authenticated users can read any user profile
    // - Users can only create/update their own profile
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if false; // Prevent deletion of user profiles
    }

    // Stands collection
    // - All authenticated users can read stands
    // - Only owners/managers can create, update, or delete stands
    match /stands/{standId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isOwnerOrManager();
    }

    // Harvests collection
    // - All authenticated users can read all harvests
    // - Users can create harvests with their own userId
    // - Users can only update/delete their own harvests
    match /harvests/{harvestId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
        request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;
    }

    // Bookings collection
    // - All authenticated users can read all bookings
    // - Users can create bookings with their own userId
    // - Users can only update/delete their own bookings
    // - Owners/managers can delete any booking
    match /bookings/{bookingId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
        request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;
      allow delete: if isOwner(resource.data.userId) || isOwnerOrManager();
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
