rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is owner or manager
    function isOwnerOrManager() {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['owner', 'manager'];
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if user is owner
    function isOwnerUser() {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner';
    }

    // Users collection
    // - All authenticated users can read any user profile
    // - Users can create their own profile on signup
    // - Users can update their own profile OR managers can edit members
    // - Role changes only allowed by owners
    // - Owners only can delete
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;

      // Allow update if: (own profile OR manager editing) AND (role unchanged OR updater is owner)
      // This prevents privilege escalation - managers cannot change roles
      allow update: if (isOwner(userId) || isOwnerOrManager()) &&
                      (request.resource.data.role == resource.data.role || isOwnerUser());

      allow delete: if isOwnerUser();
    }

    // Stands collection
    // - All authenticated users can read stands
    // - Only owners/managers can create, update, or delete stands
    match /stands/{standId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isOwnerOrManager();
    }

    // Harvests collection
    // - All authenticated users can read all harvests
    // - Users can create harvests with their own userId
    // - Users can only update/delete their own harvests
    match /harvests/{harvestId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
        request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;
    }

    // Bookings collection
    // - All authenticated users can read all bookings
    // - Users can create bookings with their own userId
    // - Users can only update/delete their own bookings
    // - Owners/managers can delete any booking
    match /bookings/{bookingId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
        request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() &&
        resource.data.userId == request.auth.uid;
      allow delete: if isOwner(resource.data.userId) || isOwnerOrManager();
    }

    // Invites collection
    // - Managers+ and invitee can read invites
    // - Managers+ can create invites
    // - Creator or managers can update/cancel invites
    // - Managers+ can delete invites
    match /invites/{inviteId} {
      allow read: if isAuthenticated() &&
        (isOwnerOrManager() || resource.data.email == request.auth.token.email);
      allow create: if isAuthenticated() && isOwnerOrManager();
      allow update: if isAuthenticated() &&
        (resource.data.invitedBy == request.auth.uid || isOwnerOrManager());
      allow delete: if isOwnerOrManager();
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
